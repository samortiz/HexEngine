<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.alwaysrejoice.hexengine">

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name=".MainActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".edit.GameListActivity"
        android:label="GameList"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".edit.GameEditActivity"
        android:label="GameEdit"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".edit.EditMapActivity"
        android:label="EditMapActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".edit.SettingsActivity"
        android:label="SettingsActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".edit.ClearActivity"
        android:label="SettingsActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".edit.BgListActivity"
        android:label="BgListActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".edit.BgEditActivity"
        android:label="BgEditActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".edit.UnitListActivity"
        android:label="UnitListActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".edit.UnitEditActivity"
        android:label="BgEditActivity"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="stateHidden">
    </activity>
    <activity
        android:name=".edit.TileGroupListActivity"
        android:label="BgListActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".edit.TileGroupEditActivity"
        android:label="BgEditActivity"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="stateHidden">
    </activity>
    <activity
        android:name=".edit.ImagePickerActivity"
        android:label="ImagePickerActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".play.MapActivity"
        android:label="MapActivity"
        android:screenOrientation="portrait">
    </activity>
  </application>
</manifest>
